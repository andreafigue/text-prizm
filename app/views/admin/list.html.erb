<br>
<div class="container">
	<h1> <i class="fe fe-users"></i> Users </h1>
	<br>
	<table class="table table-hover table-bordered table-striped">
 		<thead>
 			<tr>
 				<th>Name</th>
 				<th>Email</th>
 				<th>Admin?</th>
 			</tr>
 		</thead>
 		<tbody>
 			<% @users.each do |u| %>
 				<tr>
 					<td><%= u.name %></td>
 					<td><%= u.email %></td>
 					<td><%= u.admin %></td>
 				</tr>
 			<% end %>
 		</tbody>
	</table>	
</div>

