<br>
<div class="container">
	<h1> <i class="fe fe-layer"></i> Batches </h1>
	<br>
	<table class="table table-hover table-bordered table-striped">
 		<thead>
 			<tr>
 				<th>Name</th>
 				<th width="10%" class="text-center">Quantity</th>
 				<th width="10%" class="text-center">Code</th>
 				<th width="10%" class="text-center">Download</th>
 				<% #if current_user.admin?%>
 					<!--<th width="10%" class="text-center">Delete</th>-->
 				<% #end%>
 			</tr>
 		</thead>
 		<tbody>
 			<% @batches.each do |b| %>
 				<tr>
 					<td><%= b.name %></td>
 					<td align="center"><%= b.texts.count %></td>
 					<td align="center">
 						<a href="/coding/index/<%=b.id%>">
 							<i class="fe fe-edit"></i>
 						</a>
 					</td>
 					<td align="center"><i class="fe fe-download"></i></td>
 					<% #if current_user.admin?%>
 						<!--<td align="center"><i class="fe fe-trash"></i></td>-->
 					<% #end %>
 				</tr>
 			<% end %>
 		</tbody>
	</table>	
</div>

